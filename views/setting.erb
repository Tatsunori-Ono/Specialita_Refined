<!--Background-->
<a style="font-family: Monaco; font-weight: bold;">Background Settings</a> <br>
    <!--Background Selection-->
        <div class="selectbox color">
            <select name="background" id="selectBackground">
              <option value="" disabled selected>Select Background</option>
              <% @backgrounds.each do |background| %>
                <option value="<%= background.bg_name %>"><%= background.bg_name %></option>
              <% end %>
            </select>
        </div>
    <!--Background Add-->
        <a href="/add_bg" class="subject_add_button" style="color: black; padding: 0; border: dashed 5px #77C2B9;">New Background</a>
    <!--Save-->
        <button onclick="saveBackground()" style="color: black; padding: 0; border: dashed 5px #77C2B9;">Save Background</button>
    <!--Background Preview-->
        <div class="background_preview" style="border: dashed 5px #CD659F;">Background Preview</div>
